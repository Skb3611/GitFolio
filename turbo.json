{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "remoteCache": {
    "signature": true
  },
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "env": [
        "TURBO_REMOTE_CACHE_SIGNATURE_KEY",
        "CLERK_SECRET_KEY ",
        "CLERK_FRONTEND_API ",
        "CLERK_API_URL ",
        "DATABASE_URL "
      ],
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "dist/**",
        "!**/.next/cache/**",
        "!**/*.map",
        "!build/temp/**"
      ],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "check-types": {
      "outputs": [],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": false
    },
    "db:generate": { "cache": false },
    "db:migrate": { "cache": false },
    "db:deploy": { "cache": false },
    "db:studio": { "cache": false },
    "db:seed": { "cache": false }
  }
}
